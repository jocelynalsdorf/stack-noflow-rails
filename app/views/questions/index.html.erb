<h1>Stack No-flow</h1>
<h3>Questions</h3>

<div id="questions-all">
<% @questions.each do |question| %>
  <h2>
    <%= link_to question.title, question_path(question) %>
  </h2>
  <div class="info">
    by <%= question.user_id %>
    on <%= question.created_at.strftime('%b %d, %Y') %>
  </div>
  <div class="content"><%= question.content %></div>
<% end %>
</div>

<% if current_user %>

  <%= link_to "Ask a Question", new_question_path %>
<% else %>
  <p>You must be signed in to ask a question</p>
<% end %>
